{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "esnext",
    "moduleResolution": "Node",
    "target": "es2017",
    "esModuleInterop": true,
    "outDir": "dist/",
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
